<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/inputbackground"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="260dp">

    <LinearLayout
        android:paddingLeft="8dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="姓名："
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <TextView
            android:background="@drawable/frame"
            android:id="@+id/dialog_tv_name"
            android:layout_weight="3"
            android:text="乔帅"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:paddingLeft="8dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:text="学号："
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <TextView
            android:background="@drawable/frame"
            android:id="@+id/dialog_tv_num"
            android:layout_weight="2"
            android:text="111"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="8dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="老师名字："
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <TextView
            android:background="@drawable/frame"
            android:id="@+id/dialog_tv_teaname"
            android:layout_weight="3"
            android:text="乔帅"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="8dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:text="老师电话："
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <TextView
            android:background="@drawable/frame"
            android:id="@+id/dialog_tv_tectel"
            android:layout_weight="1"
            android:text="111"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="8dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="所在楼号："
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <TextView
            android:background="@drawable/frame"
            android:layout_weight="3"
            android:id="@+id/dialog_tv_buildingnum"
            android:text="122"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="8dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:text="宿舍："
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dialog_tv_roomnum"
            android:background="@drawable/frame"
            android:layout_weight="2"
            android:text="111"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="8dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="学院："
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <TextView
            android:background="@drawable/frame"
            android:layout_weight="3"
            android:id="@+id/dialog_tv_school"
            android:text="122"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="8dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:text="专业："
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dialog_tv_major"
            android:background="@drawable/frame"
            android:layout_weight="2"
            android:text="111"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>