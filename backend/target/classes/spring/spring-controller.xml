<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-3.1.xsd
                        http://www.springframework.org/schema/mvc
                        http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">
    <!-- 自动扫描该包 -->
    <mvc:annotation-driven/>

    <mvc:default-servlet-handler/>

    <!-- 处理静态资源文件 -->
    <mvc:resources location="/statics/" mapping="/statics/**" />

    <!--&lt;!&ndash; 注册拦截器 &ndash;&gt;-->
    <!--<mvc:interceptors>-->
        <!--<mvc:interceptor>-->
            <!--<mvc:mapping path="/WEB-INF/pages/backend/*"/>-->
            <!--<mvc:mapping path="/WEB-INF/pages/main"/>-->
            <!--<bean class="cn.nam.dormitorymanage.backend.utils.LoginInterceptor"/>-->
        <!--</mvc:interceptor>-->
    <!--</mvc:interceptors>-->

    <!-- 视图解析器 -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/pages/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <!--自动扫描指定包下的注解类，并注册到IOC容器中-->
    <context:component-scan base-package="cn.nam.dormitorymanage.backend.controller"/>

</beans>